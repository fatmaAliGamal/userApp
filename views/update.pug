extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Edit User

        // Update form
        form(method='POST' action='/users/' + user.id + '/edit')
          
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='fatma' name='name' value=user.name)
          
          div.form-group
            label(for='age') Age:
            input#age.form-control(type='number', placeholder='1' name='age' value=user.age)
          
          button.btn.btn-primary(type='submit') Edit User